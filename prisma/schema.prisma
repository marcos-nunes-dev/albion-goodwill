generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DailyActivity {
  id                        String   @id @default(uuid())
  userId                    String
  username                  String
  date                      DateTime @db.Date
  messageCount              Int      @default(0)
  voiceTimeSeconds          Int      @default(0)
  afkTimeSeconds            Int      @default(0)
  mutedDeafenedTimeSeconds  Int      @default(0)
  lastUpdated              DateTime @default(now()) @db.Timestamptz

  @@unique([userId, date])
  @@map("daily_activity")
}

model WeeklyActivity {
  id                        String   @id @default(uuid())
  userId                    String
  username                  String
  weekStart                 DateTime @db.Date
  messageCount              Int      @default(0)
  voiceTimeSeconds          Int      @default(0)
  afkTimeSeconds            Int      @default(0)
  mutedDeafenedTimeSeconds  Int      @default(0)
  lastUpdated              DateTime @default(now()) @db.Timestamptz

  @@unique([userId, weekStart], map: "weekly_activity_user_week")
  @@map("weekly_activity")
}

model MonthlyActivity {
  id                        String   @id @default(uuid())
  userId                    String
  username                  String
  monthStart                DateTime @db.Date
  messageCount              Int      @default(0)
  voiceTimeSeconds          Int      @default(0)
  afkTimeSeconds            Int      @default(0)
  mutedDeafenedTimeSeconds  Int      @default(0)
  lastUpdated              DateTime @default(now()) @db.Timestamptz

  @@unique([userId, monthStart], map: "monthly_activity_user_month")
  @@map("monthly_activity")
}

model VoiceSession {
  id                  String   @id @default(uuid())
  userId              String
  username            String
  channelId           String
  isAfk               Boolean  @default(false)
  isMutedOrDeafened   Boolean  @default(false)
  joinTime            DateTime @db.Timestamptz
  lastStatusChange    DateTime @db.Timestamptz
  isActive            Boolean  @default(true)

  @@map("voice_sessions")
} 